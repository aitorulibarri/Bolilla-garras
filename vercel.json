{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/sw.js",
            "dest": "/public/sw.js",
            "headers": {
                "Cache-Control": "no-cache",
                "Content-Type": "application/javascript",
                "Service-Worker-Allowed": "/"
            }
        },
        {
            "src": "/manifest.json",
            "dest": "/public/manifest.json",
            "headers": {
                "Content-Type": "application/manifest+json"
            }
        },
        {
            "src": "/styles.css",
            "dest": "/public/styles.css",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate"
            }
        },
        {
            "src": "/app.js",
            "dest": "/public/app.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate"
            }
        },
        {
            "src": "/index.html",
            "dest": "/public/index.html",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate"
            }
        },
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}